<div class="llb-filter-bar-container">
	<div class="form-check form-switch llb-filter-bar-switch">
		<label class="form-check-label" for="flexSwitchCheckDefault">Favoris:</label>
		<input class="form-check-input" onclick="filterIsLiked()" type="checkbox" role="switch" id="flexSwitchCheckDefault" {% if app.session.get("filters")["isLiked"] is defined %} checked={{app.session.get("filters").isLiked == "liked"}} {% endif %}>
	</div>

	<div class="form-check form-switch llb-filter-bar-switch">
		<label class="form-check-label" for="flexSwitchCheckDefault">Termin√©:</label>
		<input class="form-check-input" onclick="filterIsValidated()" type="checkbox" role="switch" id="flexSwitchCheckDefault" {% if app.session.get("filters")["isValidated"] is defined %} checked={{app.session.get("filters").isLiked == "liked"}} {% endif %}>
	</div>

	{{ component('CategoryComponent') }}
	{{ component('ThemeComponent') }}
	{{ component('TagComponent') }}

	<a href={{ path("app_search_reset_filters")}}>
		<button type="button" class="btn btn-outline-light">Reset</button>
	</a>
</div>


<script>
	function filterIsLiked() {
window.location.href = "/search/addFilter/isLiked_liked";
}

function filterIsValidated() {
window.location.href = "/search/addFilter/isValidated_validated";
}
</script>


