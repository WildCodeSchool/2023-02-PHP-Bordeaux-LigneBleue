{% extends 'base.html.twig' %}

{% block title %}Sequence{% endblock %}

{% block body %}
    <h1>Sequence</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sequence.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ sequence.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ sequence.content }}</td>
            </tr>
            <tr>
                <th>Exercice</th>
                <td>{{ sequence.exercice ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IndexOrder</th>
                <td>{{ sequence.indexOrder }}</td>
            </tr>
            <tr>
                <th>PicturePath</th>
                <td>{{ sequence.picturePath }}</td>
            </tr>
            <tr>
                <th>VideoPath</th>
                <td>{{ sequence.videoPath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sequence_index') }}">back to list</a>

    <a href="{{ path('app_sequence_edit', {'id': sequence.id}) }}">edit</a>

    {{ include('sequence/_delete_form.html.twig') }}
{% endblock %}
