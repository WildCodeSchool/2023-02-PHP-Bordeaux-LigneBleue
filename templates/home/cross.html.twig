{% extends 'base.html.twig' %}

{% block title %}La Ligne Bleue
{% endblock %}

{% block body %}
	<section class="llb-title-crossPage">
		<h1 class="llb-titleLandingPage">La Ligne Bleue</h1>
		<h2 class="llb-subtitleLandingPage">Contre l’exclusion numérique</h2>
	</section>

	<section class="llb-card-crossPage">
		<div class="llb-cardConnect d-flex flex-column">
			<h4 class="llb-h5-cardConnect">J'ai déja un compte</h4>
            <a href="{{ path('app_login') }}" style="text-decoration: none"><button class="llb-button-yellow" style="margin-top: 30%; margin-left: 5%">Je me connecte</button></a>
			<img class="llb-img-cardsCrossPage" src="{{ asset('build/images/logo-card-femme.png') }}">
		</div>

		<div class="llb-cardConnect d-flex flex-column">
			<h4 class="llb-h5-cardConnect">Je souhaite créer un compte</h4>
            <a href="{{ path('app_register') }}" style="text-decoration: none"><button class="llb-button-yellow" style="margin-top: 30%; margin-left: 5%">Je m'inscris</button></a>
			<img class="llb-img-cardsCrossPage" src="{{ asset('build/images/logo-card-femme2.png') }}">
		</div>

		<div class="llb-cardConnect d-flex flex-column">
			<h4 class="llb-h5-cardConnect">Je ne souhaite pas créer de compte</h4>
            <a href="{{ path('app_category_index') }}" style="text-decoration: none"><button class="llb-button-yellow" style="margin-top: 30%; margin-left: 5%">Je découvre</button></a>
			<img class="llb-img-cardsCrossPage" src="{{ asset('build/images/logo-card-femme.png') }}">
		</div>
	</section>
{% endblock %}
