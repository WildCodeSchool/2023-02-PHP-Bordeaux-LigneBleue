<div class="llb-theme-index-container" style="margin-top:3%">
	{% if app.request.attributes.get('_route') is same as('app_category_index') %}
		<div id="llb-theme-index-title">
			<h1>Trouvez votre formation</h1>
			<p>Choisissez une catégorie parmi les suivantes :</p>
		</div>
		<div class="llb-category-index-card-container">
			{% for category in categories %}
				{% include "/category/_card.html.twig" %}
			{% endfor %}
		</div>
	{% endif %}

	{% if app.request.attributes.get('_route') is same as('app_category_show') %}
		<div id="llb-theme-index-title">
			<h1>Catégorie :
				{{ category.categoryTitle }}</h1>
			<p>Choisissez un thème :</p>
		</div>
		<div class="llb-category-index-card-container">
			{% for theme in category.themes %}
				{% include "/theme/_card.html.twig" %}
			{% endfor %}
		</div>
	{% endif %}

	{% if app.request.attributes.get('_route') is same as('app_theme_show') %}
		<div id="llb-theme-index-title">
			<h1>Thème :
				{{theme.title}}</h1>
			<p>Choisissez votre formation :</p>
		</div>
		<div class="llb-theme-index-card-container">
			{% for tutorial in theme.tutorials %}
				{% include "tutorial/_card.html.twig" %}
			{% endfor %}
		</div>
	{% endif %}

</div>
