<div class="card">
	<img class="card-img-top" src={{ asset(picture_path ~ tutorial.picturePath) }} alt="{{ tutorial.title }}">
	<div
		class="card-body">
		{# DEBUG #}
		<h1>{{ tutorial.theme.category.categoryTitle }}</h1>
		<h1>{{ tutorial.theme.title }}</h1>
		{# DEBUG #}
		<h5 class="card-title">
			{{tutorial.title}}</h5>
		{% for tag in tutorial.tags %}
			{% include "tag/_badge.html.twig" %}
		{% endfor %}
		<p class="card-text">{{ tutorial.objective }}</p>
		<a href={{ path("app_tutorial_show", {"slug": tutorial.slug} )}} class="btn btn-primary">Commencer</a>
	</div>
</div>
