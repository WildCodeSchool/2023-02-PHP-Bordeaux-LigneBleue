    <div class="llb-background-light-blue-userPage llb-category-size d-flex align-items-center justify-content-center 100vh"></div>

    <!--         FIRST SLIDER           -->

    <section class="llb-tuto-userPage">
        <div class="card-wrapper container-sm d-flex  justify-content-around">
            {% if utLiked %}
                {% for utLikedOne in utLiked %}
                    <div class="card">
                        <img src="{{ asset('build/images/cmp-mail.jpeg') }}" class="card-img-top" alt="..." style="height:25vh">
                        <div class="card-body">
                            <h5 class="card-title">{{ utLikedOne.tutorial.title }}</h5>
                            <button class="llb-button-yellow">Voir</button>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            {% if utLiked is empty %}
                <p class="text-white">Vous n'avez pas encore sauvegardé de formations</p>
                <p class="text-white">Retrouvez toutes les formations en cliquant ici</p>
            {% endif %}
        </div>
    </section>

