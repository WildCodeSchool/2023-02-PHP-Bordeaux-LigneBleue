{% extends 'base.html.twig' %}

{% block title %}User Page{% endblock %}

{% block body %}
    <div class="llb-welcome-userPage">
        <div class="leftPart-userPage">
            <h2 class="bienvenue-title">Bienvenue {{ user.firstname }}</h2>
            <p class="welcomeText-userPage">Bienvenue dans votre espace personnel.
                Retrouvez dans cette section vos informations personnelles ainsi que les formations terminées et celles en cours.</p>
            <button class="llb-button-blue">Tuto Espace Perso</button>
        </div>
        <div class="rightPart-userPage">
            <img class="avatar-userPage" src="{{ asset('build/images/avatar-lady1.png') }}">
        </div>
    </div>

    <section class="llb-cards-userPage">
        <div class="llb-cardConnect">
            <h5 class="llb-title-cards3-userPage">Mes informations personnelles</h5>
            <a class="nav-link text-warning" href="{{ path('app_user_edit', {"id": app.user.id}) }}">
                <button class="llb-button-yellow" style="margin-top: -5%">Y aller</button>
            </a>
            <div class="llb-img-container">
                <img class="llb-img-cardsUserPage" src="{{ asset('build/images/logo-card-femme.png') }}">
            </div>
        </div>

        <div class="llb-cardConnect">
            <h5 class="llb-title-cards3-userPage">Mes formations terminées</h5>
            <a class="nav-link text-warning" href="{{ path('app_register') }}"><button class="llb-button-yellow" style="margin-top: -5%">Y aller</button></a>
            <div class="llb-img-container">
                <img class="llb-img-cardsUserPage" src="{{ asset('build/images/logo-card-femme.png') }}">
            </div>
        </div>

        <div class="llb-cardConnect">
            <h5 class="llb-title-cards3-userPage">Mes formations sauvegardées</h5>
            <a class="nav-link text-warning" href="{{ path('app_theme_index') }}"><button class="llb-button-yellow" style="margin-top: -5%">Je découvre</button></a>
            <div class="llb-img-container">
                <img class="llb-img-cardsUserPage" src="{{ asset('build/images/logo-card-femme2.png') }}">
            </div>
        </div>
    </section>
    <p>{{ dump(app.user) }}</p>

