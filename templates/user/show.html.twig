{% extends 'base.html.twig' %}

{% block title %}User Page{% endblock %}

{% block body %}
    <div class="llb-welcome-userPage">
        <div class="llb-leftPart-userPage">
            <h2 class="llb-welcome-title">Bienvenue {{ user.firstname|capitalize }}</h2>
            <p class="llb-welcomeText-userPage">Bienvenue dans votre espace personnel.
                Retrouvez dans cette section vos informations personnelles ainsi que les formations terminées et celles en cours.</p>
            <div class="llb-buttonEdit-Tuto">
                <a href="{{ path('app_user_edit_avatar', {'id': user.id}) }}" style="text-decoration: none">
            <button class="llb-button-blue" style="margin-top:-2%">Tuto Espace Perso</button>
            </a>
                <a href="{{ path('app_user_edit_avatar', {'id': user.id}) }}" style="text-decoration: none">
                <button class="llb-button-blue">Modifier son avatar</button>
            </a>
            </div>
        </div>
        {% if user.avatar is not null %}
            <img class="llb-avatarOfUser" src="{{ asset('build/images/' ~ user.avatar) }}" alt="Avatar" style="margin-left:2%">
        {% else %}
            <div style="width:20vw; height:20vw;margin-top:3%; background-color:#FFCB05;">
                <a href="{{ path('app_user_edit_avatar', {'id': user.id}) }}">
                    <p style="line-height: 20vw;text-align: center">Veuillez sélectionner un avatar</p>
                </a>
            </div>
        {% endif %}
    </div>

    <section class="llb-cards-userPage">
        <div class="llb-cardConnect d-flex flex-column p-4">
            <h5 class="llb-title-cards3-userPage">Mes informations personnelles</h5>
            <a class="nav-link text-warning" href="{{ path('app_user_edit', {"id": app.user.id}) }}">
                <button class="llb-button-yellow" style="margin-top: 10%; margin-left: 5%; width:60%">Y aller</button>
            </a>
            <div class="llb-img-container">
                <img class="llb-img-cardsUserPage" src="{{ asset('build/images/logo-card-femme.png') }}">
            </div>
        </div>

        <div class="llb-cardConnect d-flex flex-column p-4">
            <h5 class="llb-title-cards3-userPage">Mes formations sauvegardées</h5>
            <a class="nav-link text-warning" href="{{ path('app_user_show_valid') }}">
                <button class="llb-button-yellow" style="margin-top: 10%; margin-left: 5%; width:60%">Je découvre</button>
            </a>
            <div class="llb-img-container">
                <img class="llb-img-cardsUserPage" src="{{ asset('build/images/logo-card-femme2.png') }}">
            </div>
        </div>

        <div class="llb-cardConnect d-flex flex-column p-4">
            <h5 class="llb-title-cards3-userPage">Mes formations terminées</h5>
            <a class="nav-link text-warning" href="{{ path('app_user_tutorial_completed', {'id': app.user.id}) }}">
                <button class="llb-button-yellow" style="margin-top: 10%; margin-left: 5%; width:60%">Y aller</button>
            </a>
            <div class="llb-img-container">
                <img class="llb-img-cardsUserPage" src="{{ asset('build/images/logo-card-femme.png') }}">
            </div>
        </div>

    </section>

    <div class="llb-blue-container-userShow">
        <h1 class="llb-title-tutoIsStarted">Mes formations en cours</h1>
        <div class="llb-tutoCardIsStarted">
        {% for tuto in utStarted %}
            {% include "tutorial/_card.html.twig" %}
        {% endfor %}
        </div>
    </div>
    <!--         BLUE STRIP 1          -->
    <div class="llb-background-light-blue-userPage llb-category-size d-flex align-items-center justify-content-center 100vh"></div>
{% endblock %}
