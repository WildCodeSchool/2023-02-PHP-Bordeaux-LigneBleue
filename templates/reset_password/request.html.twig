{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="llb-background-light-blue llb-category-size"></div>
<div class="llb-category-index-container mb-5 mt-5">
<h1 class="text-white">Réinitialiser le mot de passe</h1>
    <div>
        <p class="text-white">
            Veuillez saisir votre email de connexion afin de recevoir le lien de réinitialisation de votre mot de passe.
        </p>
    </div>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email,
            {
                'attr': {
                'placeholder': 'Mon email de connexion',
                'class': 'request-email'},
            } ) }}

        <button class="llb-button-yellow llb-responsive-w-100 ">Recevoir le lien</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
