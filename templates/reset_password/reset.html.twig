{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="llb-background-light-blue llb-category-size"></div>
    <div class="llb-category-index-container mb-5 mt-5">
<h1 class="text-white">Réinitialiser le mot de passe</h1>
    {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword.first,
            {'attr': {
                'class': 'request-email'},
                'label': 'Nouveau mot de passe',
                'label_attr': {'class': 'text-white'}} ) }}
        {{ form_row(resetForm.plainPassword.second,
            {'attr': {
                'class': 'request-email'},
                'label': 'Répéter le mot de passe',
                'label_attr': {'class': 'text-white'}} ) }}
        <button class="llb-button-yellow llb-responsive-w-100">Réinitialiser</button>
    {{ form_end(resetForm) }}
    </div>
{% endblock %}
