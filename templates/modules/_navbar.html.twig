<nav class="navbar navbar-expand-lg navbar-light llb-navbar">
    <a data-no-swup class="navbar-brand llb-navbar-brand fs-3" href="{{ path("app_home")}}">
        <img class="d-inline-block align-text-top me-2" src={{ asset(icons_path ~ "LLB_Logo_White.png")}} alt="" width="30" height="30">
        La Ligne Bleue
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse llb-navbar-container" id="navbarSupportedContent">

        {#        <form class="form-inline my-2 my-lg-0">#}
        {#            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">#}
        {#            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>#}
        {#        </form>#}

        {{ component("SearchBar") }}

        <ul class="navbar-nav mr-auto">

            <li class="nav-item p-1">
                <a data-no-swup class="btn llb-navbar-button" id="js-forma-navbar" href={{ path("app_category_index")}}>Formations</a>
            </li>

            {% if app.user %}

                <li class="nav-item p-1">
                    <a data-no-swup class="btn llb-navbar-button" id="js-profil-navbar" href="{{ path('app_user_show', {"id": app.user.id}) }}">Profil</a>
                </li>

                {% if is_granted("ROLE_ADMIN") %}

                    <li class="nav-item p-1">
                        <a data-no-swup class="btn llb-navbar-button" href={{ path("admin") }}>Dashboard</a>
                    </li>

                {% else %}

                    <li class="nav-item p-1">
                        <a data-no-swup class="btn llb-navbar-button" href="/logout">Déconnexion</a>
                    </li>

                {% endif %}
            {% else %}

                <li class="nav-item p-1">
                    <a data-no-swup class="btn llb-navbar-button" href={{ path("app_register") }}>Inscription</a>
                </li>

                <li class="nav-item p-1">
                    <a data-no-swup class="btn llb-navbar-button" href={{ path("app_login") }}>Connexion</a>
                </li>

            {% endif %}

        </ul>

    </div>
</nav>
